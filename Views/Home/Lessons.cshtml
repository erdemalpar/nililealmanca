@model List<GermanLearningApp.Mvc.Models.Lesson>
@{
    ViewData["Title"] = "Dersler";
    int activeLessonId = ViewBag.ActiveLessonId;
    List<int> permittedIds = ViewBag.PermittedLessonIds as List<int> ?? new List<int>();
}

<section id="lessons-content" class="grid grid-cols-1 lg:grid-cols-12 w-full min-h-screen bg-gray-50">
    <!-- Sol Panel: Ders Listesi (Sidebar) -->
    <div class="lg:col-span-3 bg-white border-r border-gray-200 p-4 h-full overflow-y-auto lg:h-screen lg:sticky lg:top-0 custom-scrollbar">
        <h2 class="text-xl font-bold text-purple-900 mb-4 px-2">Ders Listesi</h2>
        <div class="flex flex-col gap-2">
            @foreach (var lesson in Model)
            {
                var isActive = lesson.Id == activeLessonId;
                <a href="@Url.Action("Lessons", new { activeLessonId = lesson.Id })"
                   class="flex items-center px-4 py-3 rounded-xl font-bold text-sm transition-all duration-200 transform focus:outline-none focus:ring-2 w-full text-left @(isActive ? "bg-purple-600 text-white shadow-lg ring-purple-300 translate-x-1" : "bg-gray-50 text-gray-700 hover:bg-purple-100 hover:text-purple-800")">
                    @if(isActive) {
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mr-3 text-yellow-300 fill-current flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                    }
                    <span class="truncate">Ders @(permittedIds.Contains(lesson.Id) ? lesson.Id.ToString() : ""): @(permittedIds.Contains(lesson.Id) ? lesson.Title.Replace(lesson.Id + ". ", "") : "Kilitli ðŸ”’")</span>
                </a>
            }
        </div>
    </div>

    <!-- Orta Panel: SeÃ§ili Ders Ä°Ã§eriÄŸi -->
    <div class="lg:col-span-9 p-4 lg:p-8 animate-fadeIn overflow-y-auto">
        @{
            var currentLesson = Model.FirstOrDefault(l => l.Id == activeLessonId) ?? Model.First();
        }
        
        <div class="bg-white rounded-3xl shadow-xl p-6 sm:p-10 border border-gray-100">
            <!-- Header -->
            <div class="flex justify-between items-start mb-8 border-b border-gray-100 pb-6">
                <div>
                    <span class="text-sm font-bold text-pink-600 uppercase tracking-widest bg-pink-50 px-3 py-1 rounded-full">Ders @(permittedIds.Contains(currentLesson.Id) ? currentLesson.Id.ToString() : "")</span>
                    @{
                        // Strip number from title if not permitted
                        string displayTitle = currentLesson.Title;
                        if (!permittedIds.Contains(currentLesson.Id))
                        {
                             // Remove "X. " prefix
                             displayTitle = System.Text.RegularExpressions.Regex.Replace(displayTitle, @"^\d+\.\s*", "");
                        }
                    }
                    <h3 class="text-3xl sm:text-5xl font-black text-gray-800 mt-3 leading-tight">@displayTitle</h3>
                </div>
                 <div class="p-3 bg-pink-100 rounded-2xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 sm:w-12 sm:h-12 text-pink-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
                 </div>
            </div>

            <!-- Content -->
            <div class="prose prose-lg max-w-none text-gray-600 mb-10">
                <p>@currentLesson.Content</p>
            </div>

            <!-- Fun Fact -->
            <div class="p-6 mb-10 bg-gradient-to-r from-cyan-50 to-blue-50 rounded-2xl border border-cyan-100 relative overflow-hidden">
                <div class="absolute top-0 right-0 -mt-4 -mr-4 w-24 h-24 bg-cyan-100 rounded-full opacity-50 blur-xl"></div>
                <p class="font-bold text-cyan-800 flex items-center mb-2 z-10 relative">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2 text-yellow-500 fill-current" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                    EÄŸlenceli Bilgi
                </p>
                <p class="text-cyan-900 italic relative z-10">@currentLesson.FunFact</p>
            </div>

            <!-- Key Phrases -->
            <div class="mb-10">
                <h4 class="font-bold text-xl text-gray-800 mb-5 flex items-center">
                     <span class="w-8 h-8 rounded-lg bg-pink-100 flex items-center justify-center mr-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-pink-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                     </span>
                     Anahtar Ä°fadeler
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var phrase in currentLesson.KeyPhrases)
                    {
                        <div class="flex items-center p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-purple-200 hover:shadow-md transition duration-300 group">
                            <span class="w-2 h-2 rounded-full bg-purple-400 mr-3 group-hover:scale-125 transition-transform"></span>
                            <span class="font-medium text-gray-700">@phrase</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Quiz Section (Lesson Specific) -->
            <div class="pt-8 border-t border-gray-100" id="lesson-quiz-section" data-lesson-id="@currentLesson.Id">
                <h4 class="font-bold text-2xl text-gray-800 mb-6 flex items-center">
                     <span class="w-10 h-10 rounded-xl bg-green-100 flex items-center justify-center mr-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-green-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                     </span>
                     Bilgileri Test Et
                </h4>
                <div class="space-y-6">
                    @foreach (var q in currentLesson.Quiz)
                    {
                        <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100 quiz-question-block transition hover:border-blue-200" data-question-id="@q.Id" data-correct-answer="@q.Answer">
                            <p class="font-bold text-gray-800 mb-4 text-lg">@q.Id. @q.Question</p>
                            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                                @foreach (var option in q.Options)
                                {
                                    <button onclick="selectOption(@q.Id, '@option', this)"
                                            class="quiz-option-btn font-medium py-3 px-4 rounded-xl border-2 border-gray-200 bg-white text-gray-600 transition-all duration-200 hover:border-blue-400 hover:text-blue-600 hover:shadow-md focus:outline-none active:scale-95 text-sm">
                                        @option
                                    </button>
                                }
                            </div>
                            <!-- Feedback area -->
                            <div class="mt-4 hidden feedback-area font-bold text-sm"></div>
                        </div>
                    }
                </div>

                <button id="submit-lesson-quiz-btn" onclick="submitLessonQuiz()"
                        class="mt-10 w-full py-4 text-xl font-bold rounded-2xl transition-all duration-300 shadow-lg transform hover:-translate-y-1 focus:outline-none focus:ring-4 focus:ring-green-300 bg-gray-200 text-gray-400 cursor-not-allowed" disabled>
                    Ders SÄ±navÄ±nÄ± Tamamla
                </button>
            </div>

        </div>
    </div>
</section>
