             $.get('/Admin/GetStudentPermissionsPartial?username=' + username, function (data) {
                $('#studentModalBody').html(data);
            });
        }

        function savePermissions() {
             var username = $('#permUsername').val();
             var allowedPages = [];
             
             // Select all checked inputs within the form
             $('#permissionsForm input[type="checkbox"]:checked').each(function() {
                 var val = $(this).val();
                 allowedPages.push(val);
             });

             console.log("Saving permissions for " + username + ": ", allowedPages);

             $.ajax({
                 url: '/Admin/UpdatePermissions',
                 type: 'POST',
                 contentType: 'application/json',
                 data: JSON.stringify({ username: username, allowedPages: allowedPages }),
                 success: function(response) {
